<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/solution_tv"
        android:text="0"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/black"
        android:layout_above="@+id/result_tv"
        android:layout_margin="16dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_tv"
        android:text="0"
        android:textSize="64dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_outline"
        android:layout_margin="16dp"
        />


    <LinearLayout
        android:id="@+id/buttons_outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradientcolorwhite"
        android:paddingVertical="16dp">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_horizontal|center"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/button_root"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="âˆš"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_sin"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="sin"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="16dp"

                />

            <Button
                android:id="@+id/button_cos"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="cos"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_tan"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="tan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:cornerRadius="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_Ac"
                android:layout_below="@+id/button_4"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="Ac"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />

            <ImageButton
                android:id="@+id/buttonClear"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="15dp"
                android:background="@drawable/custom_button1"
                android:src="@drawable/ic_baseline_backspace_24"
                app:cornerRadius="16dp"

                />

            <Button
                android:id="@+id/button_divide"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="15dp"
                android:backgroundTint="#ADD8FF"
                android:text="/"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="34dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_dot"
                android:layout_width="62dp"
                android:layout_height="72dp"
                android:layout_margin="20dp"
                android:backgroundTint="#ADD8FF"
                android:gravity="clip_horizontal|center_horizontal"
                android:text="."
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="7"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="8"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />


            <Button
                android:id="@+id/button_9"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="9"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="34dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_minus"
                android:layout_width="62dp"
                android:layout_height="72dp"
                android:layout_margin="15dp"
                android:backgroundTint="#ADD8FF"
                android:gravity="center"
                android:text="-"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="4"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="5"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />


            <Button
                android:id="@+id/button_6"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="6"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="34dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="#ADD8FF"
                android:gravity="center"
                android:text="+"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="1"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="66dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="2"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />


            <Button
                android:id="@+id/button_3"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:text="3"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="34dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="#ADD8FF"
                android:gravity="center"
                android:text="*"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_0"
                android:layout_width="255dp"
                android:layout_height="71dp"
                android:layout_margin="15dp"
                android:backgroundTint="#D3D3D3"
                android:gravity="center"
                android:padding="1dp"
                android:text="0"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:backgroundTint="#19ACFF"
                android:gravity="center"
                android:text="="
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="16dp"
                />


        </LinearLayout>






    </LinearLayout>


</RelativeLayout>

